<h2 class="mt-2">Create a new drone</h2>
<form action="/drones/create" method="post" style="border: 1px dotted rgba(0,0,0,0.5)" class="p-3">
  <div class="form-group">
    <label for="expamplesname">Name</label>
    <input type="text" name="name" />
  </div>
  <div class="form-group">
    <label for="examplepropellers">Propellers</label>
     <input type="number" name="propellers" max="4"/>
  </div>

  <div class="form-group">
    <label for="examplemaxspeed">Max Speed</label>
      <input type="number" name="maxSpeed" min="1" max="18" />
  </div>
 
  <button class="btn btn-primary">Create</button>
</form>
